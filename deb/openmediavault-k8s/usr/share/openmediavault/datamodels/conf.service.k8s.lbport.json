{
	"type": "config",
	"id": "conf.service.k8s.lbport",
	"title": "Load Balancer port",
	"queryinfo": {
		"xpath": ".//services/k8s/lbports/item",
		"iterable": true,
		"idproperty": "uuid"
	},
	"properties": {
		"uuid": {
			"type": "string",
			"format": "uuidv4"
		},
		"name": {
			"type": "string"
		},
		"port": {
			"type": "integer",
			"minimum": 1,
			"maximum": 65535
		},
		"exposedport": {
			"type": "integer",
			"minimum": 1,
			"maximum": 65535
		},
		"protocol": {
			"type": "string",
			"enum": ["udp", "tcp"]
		},
		"expose": {
			"type": "boolean"
		},
		"comment": {
			"type": "string"
		},
		"extravalues": {
			"type": "string"
		}
	}
}
