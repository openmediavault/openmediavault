{
	"type": "config",
	"id": "conf.service.usbbackup",
	"title": "USB backup",
	"queryinfo": {
		"xpath": "//services/usbbackup",
		"iterable": false
	},
	"properties": {
		"jobs": {
			"type": "object",
			"properties": {
				"job": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"uuid": {
								"type": "string",
								"format": "uuidv4"
							},
							"enable": {
								"type": "boolean",
								"default": false
							},
							"mode": {
							    "type": "string",
							    "enum":[ "push", "pull" ],
								"default": "push"
							},
							"sendemail": {
								"type": "boolean",
								"default": false
							},
							"comment": {
								"type": "string",
								"default": ""
							},
							"devicefile": {
								"type": "string",
								"format": "devicefile"
							},
							"sharedfolderref": {
								"type": "string",
								"format": "uuidv4"
							},
							"usesubdir": {
								"type": "boolean",
								"default": false
							},
							"recursive": {
								"type": "boolean",
								"default": true
							},
							"times": {
								"type": "boolean",
								"default": true
							},
							"compress": {
								"type": "boolean",
								"default": false
							},
							"archive": {
								"type": "boolean",
								"default": true
							},
							"delete": {
								"type": "boolean",
								"default": false
							},
							"quiet": {
								"type":"boolean",
								"default": false
							},
							"perms": {
								"type": "boolean",
								"default": true
							},
							"acls": {
								"type": "boolean",
								"default": false
							},
							"xattrs":{
								"type": "boolean",
								"default": false
							},
							"partial": {
								"type": "boolean",
								"default": false
							},
							"extraoptions": {
								"type": "string"
							}
						}
					}
				}
			}
		}
	}
}
