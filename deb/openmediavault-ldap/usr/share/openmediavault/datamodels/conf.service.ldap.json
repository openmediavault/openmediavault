{
	"type": "config",
	"id": "conf.service.ldap",
	"title": "LDAP",
	"queryinfo": {
		"xpath": "//services/ldap",
		"iterable": false
	},
	"properties": {
		"enable": {
			"type": "boolean",
			"default": false
		},
		"host": {
		    "type": "string"
		},
		"port": {
		    "type": "integer",
		    "minimum": 1,
		    "maximum": 65535,
			"default": 389
		},
		"enablessl": {
		    "type": "boolean",
			"default": false
		},
		"base": {
		    "type": "string"
		},
		"rootbinddn": {
		    "type": "string"
		},
		"rootbindpw": {
		    "type": "string"
		},
		"usersuffix": {
		    "type": "string",
			"default": "ou=Users"
		},
		"groupsuffix": {
		    "type": "string",
			"default": "ou=Groups"
		},
		"enablepam": {
		    "type": "boolean",
			"default": true
		},
		"extraoptions": {
		    "type": "string"
		},
		"extraclientoptions": {
		    "type": "string"
		}
	}
}
