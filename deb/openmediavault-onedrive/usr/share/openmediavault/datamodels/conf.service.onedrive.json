{
	"type": "config",
	"id": "conf.service.onedrive",
	"title": "OneDrive",
	"queryinfo": {
		"xpath": "//services/onedrive",
		"iterable": false
	},
	"properties": {
		"enable": {
			"type": "boolean",
			"default": false
		},
		"sharedfolderref": {
			"type": "string",
			"oneOf": [{
				"type": "string",
				"format": "uuidv4"
			},{
				"type": "string",
				"maxLength": 0
			}]
		},
		"replicationmode": {
			"type": "string",
			"enum": ["down", "up", "updown"],
			"default": "updown"
		},
		"localfirst": {
			"type": "boolean",
			"default": false
		},
		"skipdotfiles": {
			"type": "boolean",
			"default": false
		},
		"monitorinterval": {
			"type": "integer",
			"enum": [60, 120, 180, 240, 300, 600, 900, 1800, 3600],
			"default": 300
		},
		"ratelimit": {
			"type": "integer",
			"enum": [0, 131072, 262144, 524288, 1048576, 10485760, 104857600],
			"default": 0
		}
	}
}
