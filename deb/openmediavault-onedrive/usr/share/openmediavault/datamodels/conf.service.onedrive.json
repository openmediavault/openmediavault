{
	"type": "config",
	"id": "conf.service.onedrive",
	"title": "OneDrive",
	"queryinfo": {
		"xpath": "//services/onedrive",
		"iterable": false
	},
	"properties": {
		"enable": {
			"type": "boolean",
			"default": false
		},
		"sharedfolderref": {
			"type": "string",
			"oneOf": [{
				"type": "string",
				"format": "uuidv4"
			},{
				"type": "string",
				"maxLength": 0
			}]
		},
		"replicationmode": {
			"type": "string",
			"enum": ["down", "up", "updown"],
			"default": "updown"
		},
		"localfirst": {
			"type": "boolean",
			"default": false
		},
		"skipdotfiles": {
			"type": "boolean",
			"default": false
		}
	}
}
