						"type": "object",
						"properties": {
							"uuid": {
								"type": "string",
								"format": "uuidv4"
							},
							"enable": {
								"type": "boolean",
								"default": false
							},
							"sharedfolderref": {
								"type": "string",
								"format": "uuidv4"
							},
							"comment": {
								"type": "string"
							},
							"password": {
								"type": "string",
