									"ro": {
										"type": "boolean",
										"default": false
									},
									"upriv": {
										"type": "boolean",
										"default": false
									},
									"invisibledots": {
										"type": "boolean",
										"default": false
									},
									"tm": {
										"type": "boolean",
										"default": false
									}
								}
							},
							"extraoptions": {
								"type": "string"
							}
						}
					}
				}
			}
		}
	}
}
