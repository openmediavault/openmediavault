create_root_bashrc:
  file.managed:
    - name: "/root/.bashrc"
    - user: root
    - group: root
    - mode: 600
    - replace: False

configure_root_bashrc:
  file.prepend:
    - name: "/root/.bashrc"
    - text: |
        {{ pillar['headers']['added'] }}
        if ! shopt -oq posix; then
            if [ -f /usr/share/bash-completion/bash_completion ]; then
                . /usr/share/bash-completion/bash_completion
            elif [ -f /etc/bash_completion ]; then
                . /etc/bash_completion
            fi
        fi
