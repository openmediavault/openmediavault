[Unit]
Description=Apply cpupower configuration
ConditionVirtualization=!container

[Service]
Type=oneshot
EnvironmentFile=-/etc/cpupower-service.conf
ExecStart=/usr/libexec/cpupower/cpupower.sh
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
