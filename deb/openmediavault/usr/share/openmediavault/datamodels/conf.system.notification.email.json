{
	"type": "config",
	"id": "conf.system.notification.email",
	"title": "Email notification settings",
	"queryinfo": {
		"xpath": "//system/email",
		"iterable": false
	},
	"properties": {
		"enable": {
		    "type": "boolean",
			"default": false
		},
		"server": {
		    "type": "string"
		},
		"port": {
		    "type": "integer",
		    "minimum": 1,
		    "maximum": 65535,
			"default": 25
		},
		"tls": {
		    "type": "string",
			"enum": [
				"no",
				"ssl",
				"starttls",
				"auto"
			],
			"default": "no"
		},
		"sender": {
		    "type": "string",
			"oneOf": [{
				"type": "string",
				"format": "email"
			},{
				"type": "string"
			}]
		},
		"authentication": {
			"type": "object",
			"properties": {
				"enable": {
					"type": "boolean",
					"default": false
				},
				"username": {
				    "type": "string"
				},
				"password": {
				    "type": "string"
				}
			}
		},
		"primaryemail": {
		    "type": "string",
			"oneOf": [{
				"type": "string",
				"format": "email"
			},{
				"type": "string"
			}]
		},
		"secondaryemail": {
		    "type": "string",
			"oneOf": [{
				"type": "string",
				"format": "email"
			},{
				"type": "string"
			}]
		}
	}
}
