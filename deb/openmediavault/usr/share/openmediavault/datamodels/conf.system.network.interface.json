{
	"type": "config",
	"id": "conf.system.network.interface",
	"title": "Network interface",
	"queryinfo": {
		"xpath": "//system/network/interfaces/interface",
		"iterable": true,
		"idproperty": "uuid",
		"refproperty": "interfaceref"
	},
	"properties": {
		"uuid": {
			"type": "string",
			"format": "uuidv4"
		},
		"type": {
			"type": "string",
			"enum": [ "ethernet", "bond", "vlan", "wifi", "bridge" ],
			"default": "ethernet"
		},
		"devicename": {
			"type": "string"
		},
		"method": {
			"type": "string",
			"enum": [ "dhcp", "static", "manual" ],
			"default": "manual"
		},
		"address": {
			"type": "string"
		},
		"netmask": {
			"type": "string"
		},
		"gateway": {
			"type": "string"
		},
		"routemetric": {
			"type": "integer",
			"minimum": 0,
			"maximum": 65535,
			"default": 0
		},
		"method6": {
			"type": "string",
			"enum": [ "auto", "dhcp", "static", "manual" ],
			"default": "manual"
		},
		"address6": {
			"type": "string"
		},
		"netmask6": {
			"type": "integer",
			"minimum": 0,
			"maximum": 128,
			"default": 64
		},
		"gateway6": {
			"type": "string"
		},
		"routemetric6": {
			"type": "integer",
			"minimum": 0,
			"maximum": 65535,
			"default": 1
		},
		"dnsnameservers": {
			"type": "string",
			"pattern": "^((\\S+\\s+)*\\S+)?$"
		},
		"dnssearch": {
			"type": "string",
			"pattern": "^((\\S+\\s+)*\\S+)?$"
		},
		"mtu": {
			"type": "integer",
			"minimum": 0,
			"maximum": 65535,
			"default": 0
		},
		"wol": {
			"type": "boolean",
			"default": false
		},
		"comment": {
			"type": "string"
		},
		"altmacaddress": {
			"type": "string",
			"pattern": "^([a-fA-F0-9]{2}(:[a-fA-F0-9]{2}){5})?$",
			"default": ""
		},
		"slaves": {
			"type": "string",
			"oneOf": [{
				"type": "string",
				"pattern": "^(((eth|venet|wlan)\\d+|(en|veth|wl)\\S+|(bond)\\d+)(\\.\\d+)?,)*((eth|venet|wlan)\\d+|(en|veth|wl)\\S+|(bond)\\d+)(\\.\\d+)?$"
			},{
				"type": "string",
				"maxLength": 0
			}]
		},
		"bondprimary": {
			"type": "string"
		},
		"bondmode": {
			"type": "integer",
			"enum": [ 0, 1, 2, 3, 4, 5, 6 ],
			"default": 1
		},
		"bondmiimon": {
			"type": "integer",
			"minimum": 0,
			"default": 0
		},
		"bonddowndelay": {
			"type": "integer",
			"minimum": 0,
			"default": 0
		},
		"bondupdelay": {
			"type": "integer",
			"minimum": 0,
			"default": 0
		},
		"bondtransmithashpolicy": {
			"type": "string",
			"enum": [ "layer2", "layer2+3", "layer3+4", "encap2+3", "encap3+4" ],
			"default": "layer2"
		},
		"vlanid": {
			"type": "integer",
			"minimum": 1,
			"maximum": 4095,
			"default": 1
		},
		"vlanrawdevice": {
			"type": "string"
		},
		"wpassid": {
			"type": "string"
		},
		"wpapsk": {
			"type": "string"
		},
		"hidden": {
			"type": "boolean",
			"default": false
		}
	}
}
