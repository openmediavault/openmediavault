{
	"type": "config",
	"id": "conf.service.smartmontools.device",
	"title": "S.M.A.R.T. monitored device",
	"queryinfo": {
		"xpath": "//services/smart/monitor/device",
		"iterable": true,
		"idproperty": "uuid"
	},
	"properties": {
		"uuid": {
			"type": "string",
			"format": "uuidv4"
		},
		"enable": {
			"type": "boolean",
			"default": false
		},
		"devicefile": {
			"type": "string",
			"format": "devicefile",
			"default": ""
		},
		"devicetype": {
			"type": "string",
			"default": ""
		},
		"tempdiff":{
			"type": "integer",
			"minimum": 0,
			"maximum": 255,
			"default": 0
		},
		"tempinfo":{
			"type": "integer",
			"minimum": 0,
			"maximum": 255,
			"default": 0
		},
		"tempcrit":{
			"type": "integer",
			"minimum": 0,
			"maximum": 255,
			"default": 0
		}
	}
}
