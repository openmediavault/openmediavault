{
	"type": "config",
	"id": "conf.service.rsyncd.module",
	"title": "Rsync server module",
	"queryinfo": {
		"xpath": "//services/rsync/server/modules/module",
		"iterable": true,
		"idproperty": "uuid"
	},
	"properties": {
		"uuid": {
			"type": "string",
			"format": "uuidv4"
		},
		"enable": {
			"type": "boolean",
			"default": false
		},
		"sharedfolderref": {
			"type": "string",
			"format": "uuidv4"
		},
		"uid": {
			"type": "string"
		},
		"gid": {
			"type": "string"
		},
		"name": {
			"type": "string"
		},
		"comment": {
			"type": "string"
		},
		"readonly": {
			"type": "boolean",
			"default": false
		},
		"writeonly": {
			"type": "boolean",
			"default": false
		},
		"maxconnections": {
			"type": "integer",
			"minimum": 0,
			"default": 0
		},
		"list": {
			"type": "boolean",
			"default": true
		},
		"hostsallow": {
			"type": "string"
		},
		"hostsdeny": {
			"type": "string"
		},
		"extraoptions": {
			"type": "string"
		},
		"authusers": {
			"type": "boolean",
			"default": false
		},
		"usechroot": {
			"type": "boolean",
			"default": false
		},
		"users": {
			"type": "object",
			"properties": {
				"user": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string"
							},
							"password": {
								"type": "string"
							}
						}
					}
				}
			}
		}
	}
}
