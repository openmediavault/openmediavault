. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

omv_sysinfo_begin_msg() {
	omv_msg "================================================================================"
	omv_msg "= $@"
	omv_msg "================================================================================"
}

omv_sysinfo_msg() {
	if test $# -eq 0 ; then
		while IFS='' read msg || [ -n "${msg}" ]; do
			omv_msg "${msg}"
		done
	else
		omv_msg "$@"
	fi
}

omv_sysinfo_end_msg() {
	omv_msg ""
}

omv_sysinfo_msg_separator() {
	omv_msg "--------------------------------------------------------------------------------"
}

omv_sysinfo_msg_caption() {
	omv_msg "$@:"
	omv_msg "$@:" | sed 's/./=/g'
}
