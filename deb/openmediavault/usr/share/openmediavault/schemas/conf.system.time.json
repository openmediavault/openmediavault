{
	"type": "config",
	"id": "conf.system.time",
	"alias": "//system/time",
	"properties": {
		"timezone": {
			"type": "string",
			"default": "Etc/UTC"
		},
		"ntp": {
			"type": "object",
			"properties": {
				"enable": {
					"type": "boolean",
					"default": 0
				},
				"timeservers": {
					"type": "string",
					"defaults": "pool.ntp.org,pool1.ntp.org;pool2.ntp.org"
				}
			}
		}
	}
}
