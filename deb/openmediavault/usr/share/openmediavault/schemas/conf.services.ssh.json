{
	"type": "config",
	"id": "conf.service.ssh",
	"title": "SSH",
	"dbbackend": {
		"xpath": "//services/ssh",
		"iterable": false
	},
	"properties": {
		"enable": {
			"type": "boolean",
			"default": 0
		},
		"port":{
			"type": "integer",
			"minimum": 1,
			"maximum": 65535,
			"default": 22
		},
		"passwordauthentication": {
			"type": "boolean",
			"default": 1
		},
		"pubkeyauthentication": {
			"type": "boolean",
			"default": 1
		},
		"permitrootlogin": {
			"type": "boolean",
			"default": 1
		},
		"tcpforwarding": {
			"type": "boolean",
			"default": 0
		},
		"compression": {
			"type": "boolean",
			"default": 0
		},
		"extraoptions": {
			"type": "string",
			"default": ""
		}
	}
}
