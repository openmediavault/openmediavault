# Documentation/Howto:
# http://www.samba.org/samba/docs/man/Samba-HOWTO-Collection/VFS.html#id2651247
# http://www.redhat.com/advice/tips/sambatrash.html

set -e

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

OMV_SAMBA_SHARE_RECYCLE_REPOSITORY=${OMV_SAMBA_SHARE_RECYCLE_REPOSITORY:-".recycle"}
OMV_SAMBA_SHARE_RECYCLE_CRONSCRIPT=${OMV_SAMBA_SHARE_RECYCLE_CRONSCRIPT:-"/etc/cron.daily/openmediavault-samba-recycle"}
OMV_SAMBA_SHARE_RECYCLE_CRONSCRIPT_MASK=${OMV_SAMBA_SHARE_RECYCLE_CRONSCRIPT_MASK:-"755"}
OMV_SAMBA_SHARE_RECYCLE_CRONSCRIPT_TEMPLATE=${OMV_SAMBA_SHARE_RECYCLE_CRONSCRIPT_TEMPLATE:-"samba-recycle-"}
OMV_SAMBA_SHARE_RECYCLE_CRONSCRIPTS_DIR=${OMV_SAMBA_SHARE_RECYCLE_CRONSCRIPTS_DIR:-"/var/lib/openmediavault/cron.d"}

# Create the rsync cron jobs. Each job is configured in a seperate script.
mkdir -p ${OMV_SAMBA_SHARE_RECYCLE_CRONSCRIPTS_DIR}
rm -f ${OMV_SAMBA_SHARE_RECYCLE_CRONSCRIPTS_DIR}/${OMV_SAMBA_SHARE_RECYCLE_CRONSCRIPT_TEMPLATE}*

[ "$(omv_config_get "//services/smb/enable")" = "0" ] && exit 0

# Create the script that purges the shared folder recylce bin.
xmlstarlet sel -t -m "//services/smb/shares/share[recyclebin='1']" \
  -v "concat(uuid,' ',sharedfolderref,' ',recyclemaxage)" \
  -i "position() != last()" -n -b \
  ${OMV_CONFIG_FILE} | xmlstarlet unesc |
  while read uuid sharedfolderref recyclemaxage; do
	  # Skip shared folders with recyclemaxage=0.
	  [ "${recyclemaxage}" -eq "0" ] && continue

	  filename="${OMV_SAMBA_SHARE_RECYCLE_CRONSCRIPTS_DIR}/${OMV_SAMBA_SHARE_RECYCLE_CRONSCRIPT_TEMPLATE}${uuid}"
	  runfile="/var/run/${OMV_SAMBA_SHARE_RECYCLE_CRONSCRIPT_TEMPLATE}${uuid}"
	  sfpath=$(omv_get_sharedfolder_path "${sharedfolderref}")
	  recyclerepository="${sfpath}/${OMV_SAMBA_SHARE_RECYCLE_REPOSITORY}"
	  amin=$(expr ${recyclemaxage} \* 24 \* 60)

	  cat <<EOF > ${filename}
#!/bin/sh
# This configuration file is auto-generated.
# WARNING: Do not edit this file, your changes will be lost.
[ -e ${runfile} ] && exit 0
trap "rm -f ${runfile}; exit" 0 1 2 5 15
touch ${runfile}
[ ! -e ${recyclerepository} ] && exit 0
find ${recyclerepository} -mindepth 1 -amin +${amin} -print0 | xargs -0 rm -rf
# Do a second run to remove empty directories.
find ${recyclerepository} -mindepth 1 -type d -empty -print0 | xargs -0 rm -rf
EOF
	  chmod ${OMV_SAMBA_SHARE_RECYCLE_CRONSCRIPT_MASK} ${filename}
  done

# Create the cron script itself.
cat <<EOF > ${OMV_SAMBA_SHARE_RECYCLE_CRONSCRIPT}
#!/bin/sh
# This configuration file is auto-generated.
# WARNING: Do not edit this file, your changes will be lost.
find ${OMV_SAMBA_SHARE_RECYCLE_CRONSCRIPTS_DIR} -maxdepth 1 -type f -iname '${OMV_SAMBA_SHARE_RECYCLE_CRONSCRIPT_TEMPLATE}*' -exec {} \;
EOF
chmod 755 ${OMV_SAMBA_SHARE_RECYCLE_CRONSCRIPT}
