# Documentation/Howto:
# http://www.debian.org/doc/manuals/debian-reference/ch05.en.html#_the_hostname_resolution

set -e

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

OMV_HOSTS_CONFIG=${OMV_HOSTS_CONFIG:-"/etc/hosts"}

# If the hostname is a FQDN, then extract the hostname part and store it
# in the alias variable.
hostname=$(omv_config_get "//system/network/dns/hostname")
domainname=$(omv_config_get "//system/network/dns/domainname")
fqdn="${hostname}"
alias=""
if [ -n "${domainname}" ]; then
	fqdn="${hostname}.${domainname}"
	alias="${hostname}"
fi

# Create /etc/hosts file
cat <<EOF > ${OMV_HOSTS_CONFIG}
# This configuration file is auto-generated by openmediavault mkconf/hosts script (https://www.openmediavault.org).
# WARNING: Do not edit this file, your changes will be lost.
127.0.0.1 localhost
127.0.1.1 ${fqdn} ${alias}

# The following lines are desirable for IPv6 capable hosts
::1     ip6-localhost ip6-loopback
fe00::0 ip6-localnet
ff00::0 ip6-mcastprefix
ff02::1 ip6-allnodes
ff02::2 ip6-allrouters
ff02::3 ip6-allhosts

EOF

xmlstarlet sel -t \
  -m "//system/network/interfaces/*" \
    -v "concat(devicename,' ',address,' ',address6)" -n \
  -b \
  ${OMV_CONFIG_FILE} | xmlstarlet unesc |
  while read devicename address address6; do
	  if omv_is_ipaddr4 "${address}"; then
		  echo "${address} ${fqdn} ${alias}" >> ${OMV_HOSTS_CONFIG}
	  fi
	  if omv_is_ipaddr6 "${address6}"; then
		  echo "${address6} ${fqdn} ${alias}" >> ${OMV_HOSTS_CONFIG}
	  fi
  done
