set -e

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

OMV_MKCONF_SCRIPTS_DIR=${OMV_MKCONF_SCRIPTS_DIR:-"/usr/share/openmediavault/mkconf"}

OMV_PAM_EXTENSIONS_DIR=${OMV_PAM_EXTENSIONS_DIR:-"${OMV_MKCONF_SCRIPTS_DIR}/pam.d"}

# Build the PAM module configuration files.
run-parts --exit-on-error ${OMV_PAM_EXTENSIONS_DIR}
