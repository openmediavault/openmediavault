set -e

. /etc/default/openmediavault

i18nDict=${OMV_DOCUMENTROOT_DIR}/js/omv/i18nDict.js

cat <<EOF > ${i18nDict}
/** This file is auto-generated by OpenMediaVault. */
OMV.i18nDict = {};
EOF

for language in $(find ${OMV_LOCALE_DIR} -maxdepth 1 -type d ! -iname ".*" -printf "%P\n"); do
	json=$(find ${OMV_LOCALE_DIR}/${language} -iname \*.po -type f -print0 | xargs -0 omv-po2json)
	cat <<EOF >> ${i18nDict}
OMV.i18nDict["${language}"] = ${json}
EOF
done

cat <<EOF >> ${i18nDict}
/** This file is auto-generated by OpenMediaVault. */
OMV.i18n.loadDictionary(OMV.i18nDict);
EOF

exit 0
